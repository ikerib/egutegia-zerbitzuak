            $("#cmdDivEgunak").removeClass("btn-primary");
            $("#divOrduak").show();
            $("#divEgunak").hide();
            $("#appbundle_eskaera_egunak").val(0);
            $('#appbundle_eskaera_nondik').val($(this).text());
