                // var oharra = $("input[name='appbundle_eskaera[oharra]']").val();
                // if ( oharra.length === 0 ) {
                //     bootbox.alert("Azalpena zehaztea beharrezkoa da.");
                //     ongi = false;
                //     return;
                // }
            }

            if ( lizentziada === true ) {
                var $lizentziamota = $("#appbundle_eskaera_lizentziamota").val();
                if ( $lizentziamota === "" ) {
