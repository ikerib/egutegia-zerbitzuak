{% extends 'base.html.twig' %}

{% block body %}
    <h1>Firma</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ firma.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ firma.name }}</td>
            </tr>
            <tr>
                <th>Completed</th>
                <td>{% if firma.completed %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Orden</th>
                <td>{{ firma.orden }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if firma.created %}{{ firma.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if firma.updated %}{{ firma.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_firm_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_firm_edit', { 'id': firma.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
