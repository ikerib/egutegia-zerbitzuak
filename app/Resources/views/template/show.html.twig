{% extends 'base.html.twig' %}

{% block body %}
    <h1>Template</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ template.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ template.name }}</td>
            </tr>
            <tr>
                <th>Hours_year</th>
                <td>{{ template.hoursyear }}</td>
            </tr>
            <tr>
                <th>Hours_free</th>
                <td>{{ template.hoursfree }}</td>
            </tr>
            <tr>
                <th>Hours_self</th>
                <td>{{ template.hoursself }}</td>
            </tr>
            <tr>
                <th>Hours_compensed</th>
                <td>{{ template.hourscompensed }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ template.slug }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if template.created %}{{ template.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if template.updated %}{{ template.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_template_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_template_edit', { 'id': template.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
