
{% extends 'base.html.twig' %}

{% block head_style %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/bootstrap-colorpicker.min.css">
{% endblock %}
{% block headline %}{{ 'Motak' | trans }} {% endblock  %}
{% block content_row %}

    {#{{ form_start(edit_form) }}#}
